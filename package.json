    "private": true,
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "styled-components": "^5.3.11",
        "typescript": "^4.9.5"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
