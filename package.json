        "@types/react-dom": "^18.2.18",
        "@types/styled-components": "^5.1.34",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "prettier": "^2.8.8"
    },
    "lint-staged": {
        "**/*.{js,ts,tsx}": [
            "lint:fix"
        ]
